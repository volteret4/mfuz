   <string notr="true">/* Estilo general */
QWidget {
    font-family: 'Segoe UI', Arial, sans-serif;
    font-size: 10pt;
}

/* Botones */
QPushButton {
    background-color: #607D8B;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 6px 12px;
    font-weight: bold;
}

QPushButton:hover {
    background-color: #78909C;
}

QPushButton:pressed {
    background-color: #546E7A;
}

/* Botones de acción (Iniciar/Detener) */
#toggle_button {
    background-color: #4CAF50;
    padding: 8px 16px;
    font-size: 11pt;
}

#toggle_button:hover {
    background-color: #66BB6A;
}

#toggle_button:pressed {
    background-color: #43A047;
}

/* Botón de configuración */
#config_button {
    background-color: #607D8B;
    border-radius: 20px;
    font-size: 16px;
}

/* GroupBox */
QGroupBox {
    border: 1px solid #E0E0E0;
    border-radius: 6px;
    margin-top: 12px;
    background-color: rgba(236, 239, 241, 0.5);
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    background-color: transparent;
    padding: 0 5px;
    color: #37474F;
}

/* ProgressBar */
QProgressBar {
    border: none;
    border-radius: 3px;
    text-align: center;
    background-color: #E0E0E0;
}

QProgressBar::chunk {
    background-color: #4CAF50;
    border-radius: 3px;
}

/* ComboBox */
QComboBox {
    border: 1px solid #E0E0E0;
    border-radius: 4px;
    padding: 5px;
    background-color: #F5F5F5;
}

QComboBox:hover, QComboBox:focus {
    border: 1px solid #78909C;
    background-color: #FFFFFF;
}

QComboBox::drop-down {
    border: none;
    border-left: 1px solid #E0E0E0;
    width: 20px;
}

QComboBox::down-arrow {
    width: 12px;
    height: 12px;
}

/* Labels */
QLabel {
    color: #455A64;
}

#countdown_label {
    color: #607D8B;
    font-weight: bold;
    font-size: 18pt;
}

/* Scroll Area */
QScrollArea {
    border: none;
    background-color: transparent;
}

/* Botones de Filtro */
QPushButton[filter_button=true] {
    background-color: transparent;
    color: #607D8B;
    border: 1px solid #B0BEC5;
    border-radius: 4px;
    padding: 6px;
    font-weight: normal;
}

QPushButton[filter_button=true]:hover {
    background-color: rgba(96, 125, 139, 0.1);
    border-color: #607D8B;
}

/* Contenedor de opciones */
#options_container {
    background-color: transparent;
}</string>
